MDScreen:
    name:"encrypt"
    MDFloatLayout:                          #arrow key and it's position
        md_bg_color: 1,1,1,1

    MDFloatLayout:

        Button:
            text: "ROT13"                           #login button and it's position
            size_hint: .5, .065
            pos_hint:{"center_x": .5, "center_y": .2}
            background_color: 0,0,0,0

            canvas.before:
                Color:
                    rgba : rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius : [5]

            on_release:
                app.encrROT13()
                root.manager.transition.direction = "left"
                root.manager.current="main"
        Button:
            text: "Bacon"                           #login button and it's position
